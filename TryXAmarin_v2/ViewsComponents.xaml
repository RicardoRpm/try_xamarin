<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TryXAmarin_v2.ViewsComponents">
    <ScrollView>
        <StackLayout>
            <Label Text="Explore TextDecorations Property" TextColor="Red" HorizontalTextAlignment="Center" />
            <Label Text="Underline Text" TextDecorations="Underline" FontSize="20" />
            <Label Text="Strikethrough Text" TextDecorations="Strikethrough" FontSize="20" />
            <Label Text="Strikethrough asnd Underline Text" TextDecorations="Strikethrough" FontSize="20" />

            <Label Text="Explore TextTransform Property" TextColor="Red" HorizontalTextAlignment="Center" />
            <Label Text="TextTransform UpperCase" TextTransform="Uppercase" />
            <Label Text="TextTransform Lowercase" TextTransform="Lowercase" />
        </StackLayout>
    </ScrollView>
</ContentPage>