<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TryXAmarin_v2.Pages.Pages">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Welcome to Xamarin.Forms!"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" />

            <Button Text="Content View" x:Name="btnContentView" />
            <Button Text="Frame" x:Name="btnFrame" />
            <Button Text="ScrolltView" x:Name="btnScrolltView" />
            <Button Text="TemplatedView" x:Name="btnTemplatedView" />
            <Button Text="ContentPresenter" x:Name="btnContentPresenter" />
            <Button Text="Grid" x:Name="btnGrid" />
            <Button Text="AbsoluteLayout" x:Name="btnAbsoluteLayout" />
            <Button Text="RelativeLayout" x:Name="btnRelativeLayout" />
            <Button Text="FlexLayout" x:Name="btnFlexLayout" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>